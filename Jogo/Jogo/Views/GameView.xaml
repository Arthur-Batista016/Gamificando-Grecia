<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jogo.Views.GameView"
             Title="GameView"
             BackgroundImageSource="room1.png">
    <VerticalStackLayout>
    
        <Grid BackgroundColor="Beige" HeightRequest="100" WidthRequest="500" >
            <Image
         Source="dinheiro.webp"
         HeightRequest="50"
         Margin="0,0,120,20"
         />
            <Label Text="100"
                   Margin="120,60,0,0"/>
            <Image
                Source="cruz.webp"
                HeightRequest="50"
                Margin="110,0,10,0"
            />
            <Label 
                Text="100"
                Margin="230,70,0,0"
                   
                />


            <Image
         Source="castelo.png"
         HeightRequest="50"
         Margin="340,0,0,0"
     />
            <Label Text="100"
                   Margin="350,75,0,0"/>
        </Grid>


        <Grid Background="#f5b230" WidthRequest="220" >

            <Label
             HorizontalTextAlignment="Center"
             Text="PRECISAMOS DE DINHEIRO PARA REFORMAR O CASTELO"
             TextColor="Black"
            />
            <Image
             Source="{Binding Image}"
             HeightRequest="220"
             Margin="0,70,0,0"
            />

            <Label
            Background="Black"
            Margin="0,280,0,0"    
            HorizontalTextAlignment="Center"
            Text="Princesa Leya"
            TextColor="White"
            />



           

        </Grid>
        <Grid>
                <Button
         ImageSource="right_button.png"
         HeightRequest="150"
         Margin="200,0,0,0"
         WidthRequest="200"
         BorderWidth="0"
            
         />
            <Button
         ImageSource="left_button.png"
         HeightRequest="150"
         Margin="100,0,400,0"
         WidthRequest="200"
         BorderWidth="0"
         />
        </Grid>


    </VerticalStackLayout>
</ContentPage>